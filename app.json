
{
  "expo": {
    "name": "Nutrion",
    "slug": "Nutrion",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/final_quest_240x240.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/final_quest_240x240.png",
      "resizeMode": "contain",
      "backgroundColor": "#4CAF50"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nutrion.app",
      "buildNumber": "1",
      "deploymentTarget": "14.0",
      "bitcode": false,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Nutrion needs camera access to scan product barcodes for adding items to your pantry.",
        "NSPhotoLibraryUsageDescription": "Nutrion needs photo library access to select product images.",
        "NSPhotoLibraryAddUsageDescription": "Nutrion needs permission to save photos to your library.",
        "NSMicrophoneUsageDescription": "Nutrion may need microphone access for certain features."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/final_quest_240x240.png",
        "backgroundColor": "#4CAF50"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.nutrion.app",
      "versionCode": 2,
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/images/final_quest_240x240.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-router",
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Nutrion to access your camera to scan product barcodes."
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow Nutrion to access your camera to scan product barcodes."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/final_quest_240x240.png",
          "color": "#4CAF50",
          "sounds": []
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Nutrion to access your photos to add product images.",
          "cameraPermission": "Allow Nutrion to access your camera to take product photos."
        }
      ]
    ],
    "scheme": "nutrion",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID_HERE"
      }
    }
  }
}
