{
  "expo": {
    "name": "Nutrion",
    "slug": "Nutrion",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#E8F5E9"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nutrion.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Nutrion needs camera access to scan barcodes",
        "NSPhotoLibraryUsageDescription": "Nutrion needs photo library access to save images"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#E8F5E9"
      },
      "package": "com.nutrion.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      "expo-font",
      "expo-router",
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow Nutrion to scan barcodes"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#4CAF50"
        }
      ]
    ],
    "scheme": "nutrion",
    "experiments": {
      "typedRoutes": true
    }
  },
  "scheme": "Nutrion"
}